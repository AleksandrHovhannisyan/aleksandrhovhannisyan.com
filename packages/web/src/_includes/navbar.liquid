<header>
  <div class="container">
    <nav aria-label="Primary">
      <a href="#page-content" class="screen-reader-only">Skip to content</a>
      <ul class="links">
        <li>
          <a href="/" {% if permalink == "/" %}aria-current="page"{% endif %}>
            <img eleventy:ignore src="/assets/images/favicons/favicon-128.png" class="logo circle" alt="" width="28" height="28">
            <span class="site-name">Aleksandr Hovhannisyan</span>
          </a>
        </li>
        {%- assign navLinks = "About,Art,Notes,Blog" | split: ',' -%}
        {%- for link in navLinks -%}
        <li>
          {%- assign href = link | downcase | prepend: "/" | append: "/" -%}
          <a
            href="{{ href }}"
            {% if permalink == href -%}
            aria-current="page"
            {%- endif -%}
            {% if link == 'Blog' and isBlogPage -%}
            aria-current="page"
            {%- endif -%}
          >
            {{- link -}}
          </a>
        </li>
        {%- endfor -%}
      </ul>
    </nav>
  </div>
</header>