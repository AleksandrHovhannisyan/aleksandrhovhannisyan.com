{%- comment -%}
The props below get assembled as a JSON string and parsed into an object prop.
This is a workaround for the fact that 11ty doesn't support named shortcode arguments in Liquid.
{%- endcomment -%}
{%- capture props -%}
  {
    "icon": "{{ icon }}"
    {%- if className -%},"className": "{{ className }}"{%- endif -%}
    {%- if size -%},"size": {{ size }}{%- endif -%}
    {%- if stroke -%},"stroke": "{{ stroke }}"{%- endif -%}
    {%- if fill -%},"fill": "{{ fill }}"{%- endif -%}
    {%- if strokeWidth -%},"strokeWidth": {{ strokeWidth }}{%- endif -%}
    {%- if strokeLinecap -%},"strokeLinecap": "{{ strokeLinecap }}"{%- endif -%}
    {%- if strokeLinejoin -%},"strokeLinejoin": "{{ strokeLinejoin }}"{%- endif -%}
  }
{%- endcapture -%}
{%- assign props = props | jsonParse -%}
{% icon props %}