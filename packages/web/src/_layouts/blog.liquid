layout: default
---

<article class="rhythm">
  {%- assign pageTag = tag.title | default: 'all' -%}
  <h1 class="prose-tight">{%- if pageTag == 'all' -%}Blog{%- else -%}Tag: {{ pageTag }}{%- endif -%}</h1>
  <p class="prose-tight text-wrap-balance size-font-lg">
    Browse the following articles, or <a href="/tags/">view all tags</a>.
  </p>
  {{ content }}
</article>
