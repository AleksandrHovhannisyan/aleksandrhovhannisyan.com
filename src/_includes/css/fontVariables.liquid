html {
  {%- for fontCategory in requiredFonts -%}
    {%- assign font = fonts[fontCategory] -%}
    --ff-{{ fontCategory }}: {{ font.family }}, {{ font.fallbacks | join: ", " }};
    {%- for variant in font.variants -%}
      {%- assign variantName = variant | first -%}
      {%- assign weights = variant | last -%}
      --fw-{{ fontCategory }}-{{ variantName }}: {{ weights.roman.weight }};
    {%- endfor -%}
  {%- endfor -%}
}