html {
  {%- for fontCategory in requiredFonts -%}
    {%- assign font = fonts[fontCategory] -%}
    --ff-{{ fontCategory }}: {{ font.family }}, {{ font.fallbacks | join: ", " }};
    {%- for entry in font.variants -%}
      {%- assign variantName = entry | first -%}
      {%- assign variant = entry | last -%}
      {%- comment -%}Italic variants don't need their own weight variables.{%- endcomment -%}
      {%- if variant.style != 'italic' -%}
        --fw-{{ fontCategory }}-{{ variantName }}: {{ variant.weight }};
      {%- endif -%}
    {%- endfor -%}
  {%- endfor -%}
}