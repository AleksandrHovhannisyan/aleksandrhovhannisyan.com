{%- comment -%}Loop over the global font config and derive CSS custom properties
from it for things like font family.{%- endcomment -%}
{%- assign fontTypeNames = fonts | keys -%}
html {
  {%- for fontType in fontTypeNames -%}
    {%- assign family = fonts[fontType].family -%}
    {%- assign weights = fonts[fontType].weights | entries -%}
    {%- assign fallbackFontStack = fonts[fontType].fallbacks | join: ", " -%}
    --font-family-{{ fontType }}: {{ family }}, {{ fallbackFontStack }};
    {%- for weight in weights -%}
      {%- assign weightName = weight | first -%}
      {%- assign weightConfig = weight | last -%}
      {%- if weightConfig.style != 'italic' -%}
        --font-weight-{{ fontType }}-{{ weightName }}: {{ weightConfig.weight }};
      {%- endif -%}
    {%- endfor -%}
  {%- endfor -%}
}