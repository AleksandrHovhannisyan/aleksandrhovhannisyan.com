{
  // Exclude these files from Ctrl+P search
  "search.exclude": {
    "**/node_modules": true,
    "**/*.{png,gif,jpg,jpeg,webp,woff,woff2}": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "cSpell.words": [
    "endcode",
    "mouseleave"
  ],
  "stylelint.enable": true,
  "stylelint.configFile": "packages/web/.stylelintrc.json",
  "stylelint.validate": [
    "scss",
  ]
}
